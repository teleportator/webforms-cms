<html>
	<head>
		@Html.Action("Title", "Common")
		<link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/Styles/style.css")" rel="Stylesheet" type="text/css" />
		<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
		<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
		<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
		<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"> </script>
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-9677496-3']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script');
				ga.type = 'text/javascript';
				ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0];
				s.parentNode.insertBefore(ga, s);
			})();
		</script>
		@RenderSection("HeaderContent", false)
	</head>
	<body>
		@RenderSection("AdminPanel", false)
		<div class="header">
			<div class="header-content">
				<div class="register">
					@Html.Partial("_LogOnPartial")
				</div>
			
				<div class="logo">
					<a class="logo-link" href="/">
						<span class="logo-title">Я волонтер Ставрополя</span>
						<span class="logo-homepage"></span>
					</a>
				</div>
			
				@Html.Action("DisplayMainMenu", "Common")
			</div>
		</div>
    
		<div class="main">
			<div class="main-content">
				@RenderBody()
			</div>
		</div>

		<div class="footer">
			<div class="footer-content">
				<div class="menu-wrapper">         
					@Html.Action("DisplayMainMenu", "Common")
				</div>
			
				<div class="copyright">
					© 2011
					<br/>
					«Центр военно-патриотического воспитания молодежи»
				</div>
			</div>
		</div>
	</body>
</html>