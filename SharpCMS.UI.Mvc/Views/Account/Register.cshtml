@using SharpCMS.UI.Mvc.Models.Accounts
@model RegisterModel

@{
    ViewBag.Title = "Регистрация - ";
}

@section HeaderContent
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<div class="left-page-content"></div>
<div class="right-page-content">
    <div class="form-content">
    	<h1>Регистрация</h1>
        <p>Используйте следующую форму для создания новой учетной записи.</p>
        @using (Html.BeginForm())
        {
            <table class="item-details">
                <tr>
    	            <td>
    	                <span class="item-details-label"> @Html.LabelFor(m => m.Email)</span>
    	    	        @Html.TextBoxFor(m => m.Email, new { @class = "item-details-property", style = "width:400px;" })
						@Html.ValidationMessageFor(m => m.Email)
    	            </td>
    	        </tr>
                <tr>
    	            <td>
    	                <span class="item-details-label">@Html.LabelFor(m => m.UserName)</span>
    	    	        @Html.TextBoxFor(m => m.UserName, new { @class = "item-details-property", style = "width:400px;" })
						@Html.ValidationMessageFor(m => m.UserName)
    	            </td>
    	        </tr>
                <tr>
                    <td>
                        <span class="item-details-label">@Html.LabelFor(m => m.Password)</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "item-details-property", style = "width:400px;" })
						@Html.ValidationMessageFor(m => m.Password)
                    </td>
                </tr>
                <tr>
                    <td>
                        <span class="item-details-label">@Html.LabelFor(m => m.ConfirmPassword)</span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "item-details-property", style = "width:400px;" })
						@Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </td>
                </tr>
                <tr>
            	    <td>
            		    @Html.ValidationSummary(true)
            	    </td>
                </tr>
                <tr>
            	    <td>
            		    <input type="submit" value="Регистрация" />
            	    </td>
                </tr>
            </table>
        }
    </div>
</div>