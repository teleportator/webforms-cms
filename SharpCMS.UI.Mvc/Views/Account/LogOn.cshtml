@using SharpCMS.UI.Mvc.Models.Accounts
@model LogOnModel

@{
    ViewBag.Title = "Вход - ";
}

@section HeaderContent
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
<div class="left-page-content"></div>
<div class="right-page-content">
    <div class="form-content">
    	<h1>Вход</h1>
        <p>Для входа введите e-mail и пароль. Если вы не зарегистрированы, то можете @Html.ActionLink("сделать это прямо сейчас", "Register").</p>
        
        @using (Html.BeginForm())
        {
    	<table class="item-details">
    	    <tr>
    	        <td>
    	            <span class="item-details-label">@Html.LabelFor(m => m.Email)</span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "item-details-property", style = "width:400px;" })
					@Html.ValidationMessageFor(m => m.Email)
    	        </td>
    	    </tr>
    	    <tr>
    	        <td>
    	            <span class="item-details-label">@Html.LabelFor(m => m.Password)</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "item-details-property", style = "width:400px;" })
					@Html.ValidationMessageFor(m => m.Password)
    	        </td>
    	    </tr>
    	    <tr>
    	        <td>
    	            @Html.ValidationSummary(true)
    	        </td>
    	    </tr>
    	    <tr>
    	        <td>
    	            <input type="submit" value="Войти" />
    	        </td>
    	    </tr>
        </table>
        }
    </div>
</div>
