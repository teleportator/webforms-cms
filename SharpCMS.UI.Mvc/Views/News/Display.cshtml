@using SharpCMS.UI.Mvc.Models.News
@model NewsDisplayModel
           
@section AdminPanel{
    @if (User.IsInRole("Administrators"))
    {
        <div class="editor-menu-underlayer"></div>
        <div class="editor-menu">
            <ul>
                <li class="editor-menu-item">
                    <a class="editor-menu-item-link" href="@Url.Action("edit", "news", new { id = Model.Id })"><span>Изменить новость</span></a>
                </li>
                <li class="editor-menu-item">
                    <a class="editor-menu-item-link" href="@Url.Action("delete", "news", new { id = Model.Id })" onclick=" if (confirm('Вы действительно хотите безвозвратно удалить этот элемент?') == false) return false; "><span>Удалить новость</span></a>
                </li>
            </ul>
        </div>
    }
}

<div class="left-page-content">
    @Html.Action("DisplaySideMenu", "Common")
</div>
<div class="right-page-content">
    <div class="news-content">
        <h1>@Html.Raw(Model.NewsTitle)</h1>
        <span class="news-date">@Model.NewsPublishedDate</span>
		<span>@Html.Raw(Model.NewsText)</span>
    </div>
    <div class="comments">
        <h2>
            комментарии</h2>
        @using (Ajax.BeginForm("Create", "Comment", new {id = ViewContext.RouteData.Values["id"]},
                                          new AjaxOptions {UpdateTargetId = "create-comment-form"}))
        {
            <div id="create-comment-form">
                @Html.Action("List", "Comment")
            </div>
        }
    </div>
</div>