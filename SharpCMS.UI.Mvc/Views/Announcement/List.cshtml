@using SharpCMS.UI.Mvc.Models.Announcements
@model AnnouncementListModel

@section AdminPanel{
    @if (User.IsInRole("Administrators"))
	{
		<div class="editor-menu-underlayer"></div>
		<div class="editor-menu">
			<ul>
				<li class="editor-menu-delimiter"><span>добавление<br/>разделов</span></li>
				<li class="editor-menu-item">
					<a class="editor-menu-item-link" href="@Url.Action("create", "article", new { type = "announcement", id = Model.Id })"><span>Акции</span></a>
				</li>
				<li class="editor-menu-delimiter"><img src="@Url.Content("~/Content/Styles/Images/editor-menu-separator.png")" alt=""/></li>
				<li class="editor-menu-item">
					<a class="editor-menu-item-link" href="@Url.Action("create", "announcement", new { id = Model.Id })"><span>Новая акция</span></a>
				</li>
				<li class="editor-menu-delimiter"><img src="@Url.Content("~/Content/Styles/Images/editor-menu-separator.png")" alt=""/></li>
				<li class="editor-menu-item">
					<a class="editor-menu-item-link" href="@Url.Action("edit", "article", new { type = "announcement", id = Model.Id })"><span>Изменить раздел</span></a>
				</li>
				<li class="editor-menu-item">
					<a class="editor-menu-item-link" href="@Url.Action("delete", "article", new { id = Model.Id })" onclick="if (confirm('Вы действительно хотите безвозвратно удалить этот элемент?') == false) return false;"><span>Удалить раздел</span></a>
				</li>
			</ul>
		</div>
	}
}

<div class="left-page-content">
    @Html.Action("DisplaySideMenu", "Common")
</div>
<div class="right-page-content">
    @Html.Action("Display", "Article")
    <div class="announcements">
        @if (Model.Announcements.Any())
		{
            <ul class="announcement-list">
                @foreach (var announcement in Model.Announcements)
				{
                    <li class="announcement-list-item">
                        <span class="announcement-date">
                            @(announcement.StartingDate == announcement.ExpiryDate
							   ? announcement.StartingDate
							   : announcement.StartingDate + " - " + announcement.ExpiryDate)
                        </span>
                        <h4 class="announcement-header">
							<a href="@Url.Action("display", "announcement", new { id = announcement.Id })">@Html.Raw(announcement.Title)</a>
                            @if (!announcement.IsActive)
							{
                                <span class="item-activity">откл.</span>
							}
                        </h4>
                        <p>@Html.Raw(announcement.Abstract)</p>
                    </li>
				}
            </ul>
		}
		else
		{
            <span class="empty-list">Нет ни одной новой акции.</span>
		}
    </div>
</div>
